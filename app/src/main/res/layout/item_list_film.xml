<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_film"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="16dp"
                android:src="@mipmap/ic_launcher"
                tools:background="@color/black" />

            <TextView
                android:id="@+id/title_film"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/image_film"
                android:maxLength="25"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="@string/test_title" />

            <TextView
                android:id="@+id/released_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_film"
                android:layout_toRightOf="@id/image_film"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                tools:text="@string/test_date" />

            <ToggleButton
                android:id="@+id/liked_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="16dp"
                android:layout_alignParentRight="true"
                android:textOn=""
                android:textOff=""
                android:onClick="onClick"
                android:background="@drawable/toggle_selector"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>